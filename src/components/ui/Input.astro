---
interface Props {
  label: string;
  type?: astroHTML.JSX.HTMLInputTypeAttribute;
  placeholder?: string;
}

const { label, type = "text", placeholder = "" } = Astro.props as Props;
---

<div>
  <label for={label} class="font-medium">{label}</label>
  <input
    type={type}
    id={label}
    placeholder={placeholder}
    class="w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-gray-800 shadow-sm rounded-lg"
  />
</div>
