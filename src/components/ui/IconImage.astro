---
import {
  IconType,
  type SectionItem,
} from "@/interfaces/section-item.interface";
import type { Section } from "@/interfaces/section.interface";

import { Icon } from "astro-icon/components";

interface Props {
  item: SectionItem | Section;
  class?: string;
}
const { item, class: className } = Astro.props as Props;

const name = item.icon?.name;
---

{
  name && item.icon_type === IconType.LIBRARY && (
    <Icon
      name={`lucide:${name}`}
      size={item.icon?.size}
      color={item.icon?.color}
      // class={className}
      stroke-width={item.icon?.strokeWidth}
    />
  )
}

{
  item.icon_type === IconType.IMAGE && (
    <img src={item.icon_url} alt={item.title} class={`size-6 ${className}`} />
  )
}
