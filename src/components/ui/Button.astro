---
interface Props {
  variant?: "solid" | "outline" | "ghost" | "soft" | "white" | "link";
  type?: "button" | "submit" | "reset";
  href?: string;
  disabled?: boolean;
  class?: string;
}

const {
  variant = "solid",
  type = "button",
  href,
  disabled = false,
  class: extraClass = "",
} = Astro.props;

const variants = {
  solid:
    "bg-primary text-white hover:bg-secondary focus:secondary border-transparent",
  outline:
    "border border-gray-200 text-gray-500 hover:border-primary hover:secondary",
  ghost: "text-primary hover:bg-blue-100 hover:text-blue-800",
  soft: "bg-blue-100 text-blue-800 hover:bg-blue-200",
  white:
    "border border-gray-200 bg-white text-gray-800 shadow hover:bg-gray-50",
  link: "text-primary hover:text-blue-800",
};

const base =
  "py-3 cursor-pointer px-4 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg disabled:opacity-50 disabled:pointer-events-none transition-colors duration-200 focus:outline-hidden";
---

{
  href ? (
    <a
      href={href}
      class={`${base} ${variants[variant]} ${extraClass}`}
      aria-disabled={disabled}
    >
      <slot />
    </a>
  ) : (
    <button
      type={type}
      disabled={disabled}
      class={`${base} ${variants[variant]} ${extraClass}`}
    >
      <slot />
    </button>
  )
}
