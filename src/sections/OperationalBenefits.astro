---
import SectionLayout from "@/layouts/SectionLayout.astro";
import type { Section } from "@/interfaces/section.interface";
import IconImage from "@/components/ui/IconImage.astro";
interface Props {
  section: Section;
}

const { section } = Astro.props as Props;
---

<SectionLayout aria-labelledby="operational-benefits-title">
 <div class="flex flex-wrap justify-center gap-6 items-stretch animate-fadeInUp">
  {section.section_items?.map((item) => (
    <article
      class="group bg-gray-100 rounded-lg basis-full sm:basis-1/2 md:basis-1/3 lg:basis-1/4 hover:scale-105 transition-transform duration-300 flex"
    >
      <div class="bg-white rounded-xl shadow-md shadow-secondary group-hover:shadow-lg transition p-6 text-center border border-gray-200 flex flex-col justify-between h-full w-full">
        <div>
          <div class="relative mb-4 mx-auto w-fit">
            <div class="absolute inset-3 bg-secondary/10 rounded-full transform scale-100" />
            <IconImage
              item={item}
              class="relative z-10 transition-colors duration-300 group-hover:text-tertiary"
            />
          </div>
          <h3 class="text-lg font-semibold text-primary mb-2">{item.title}</h3>
          <p class="text-gray-600 text-sm">{item.description}</p>
        </div>
      </div>
    </article>
  ))}
</div>

</SectionLayout>
