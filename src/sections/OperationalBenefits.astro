---
import SectionLayout from "@/layouts/SectionLayout.astro";
import type { Section } from "@/interfaces/section.interface";
import IconImage from "@/components/ui/IconImage.astro";
interface Props {
  section: Section;
}

const { section } = Astro.props as Props;
---

<SectionLayout aria-labelledby="operational-benefits-title">
  <div class="flex flex-wrap justify-center">
    {
      section.section_items?.map((item) => (
        <article class="p-6 basis-full sm:basis-1/2 md:basis-1/3 lg:basis-1/4">
          <div class="bg-white rounded-xl shadow-md shadow-secondary hover:shadow-lg transition p-6 text-center border border-gray-200">
            <div class="relative mb-4 mx-auto bg-red-800 w-fit">
              <IconImage item={item} />
            <div class="absolute bg-secondary/20 rounded-full size-8"></div>
            </div>
            <h3 class="text-lg font-semibold text-gray-800 mb-2">
              {item.title}
            </h3>
            <p class="text-gray-600 text-sm">{item.description}</p>
          </div>
        </article>
      ))
    }
  </div>
</SectionLayout>
