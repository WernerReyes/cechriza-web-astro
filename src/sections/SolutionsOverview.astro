---
import IconImage from "@/components/ui/IconImage.astro";
import type { Section } from "@/interfaces/section.interface";
import SectionLayout from "@/layouts/SectionLayout.astro";
interface Props {
  section: Section;
}

const { section } = Astro.props as Props;
---

<SectionLayout
    aria-labelledby="solutions-overview-title"
class="bg-tg-bg">
  <!-- Encabezado principal -->
  <header class="mb-6 flex flex-col items-center text-center animate-fadeInUp">
    <h2 class="title text-secondary! tracking-tight mb-4">{section.title}</h2>
    <p class="text-gray-600 text-lg max-w-2xl mx-auto">
      {section.description}
    </p>
  </header>

  <!-- Lista de servicios -->
  <ul class="flex flex-wrap justify-center">
    {
      section.section_items?.map((item) => (
        <li
          class="basis-full sm:basis-1/2 md:basis-1/3 lg:basis-1/4 animate-fadeInUp p-6"
          aria-labelledby={`solution-${item.id_section_item}`}
        >
          <article class="flex flex-col items-center text-center space-y-4 group">
            <div class="bg-secondary text-white p-6 rounded-full shadow-lg transition-transform transform group-hover:scale-110">
              <IconImage item={item} />
            </div>
            <h3 class="text-xl font-bold text-secondary">{item.title}</h3>
            <p class="text-gray-600 leading-relaxed">{item.description}</p>
          </article>
        </li>
      ))
    }
  </ul>
</SectionLayout>
